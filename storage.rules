rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Avatar uploads - users can only write to their own folder
    match /avatars/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Product images - authenticated users can write
    match /products/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
